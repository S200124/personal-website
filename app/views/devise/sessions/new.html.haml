.block-center.mt-4.wd-xl
  .card.card-flat
    .card-header.text-center.bg-dark
      %a{href: "#"}
        %img.block-center.rounded{alt: "Image", src: "#{image_path('angle/logo.png')}"}
    .card-body
      %p.text-center.py-2 SIGN IN TO CONTINUE.
      = form_for(resource, as: resource_name, url: session_path(resource_name)) do |f|
        .form-group
          .input-group.with-focus
            = f.email_field :email, autofocus: true, autocomplete: "email", class: 'form-control border-right-0'
            .input-group-append
              %span.input-group-text.text-muted.bg-transparent.border-left-0
                %em.fa.fa-envelope
        .form-group
          .input-group.with-focus
            = f.password_field :password, autocomplete: "current-password", class: 'form-control border-right-0'
            .input-group-append
              %span.input-group-text.text-muted.bg-transparent.border-left-0
                %em.fa.fa-lock
        - if devise_mapping.rememberable?
          .clearfix
            .checkbox.c-checkbox.float-left.mt-0
              %label
                = f.check_box :remember_me
                %span.fa.fa-check
                Remember Me
            .float-right
              = link_to "Forgot your password?", new_password_path(resource_name), class: 'text-muted'
        = f.submit "Log in", class: 'btn btn-block btn-primary mt-3'
      = render "devise/shared/links"
